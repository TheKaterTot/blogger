<h1><%= @article.title %></h1>
<p>
  Tags:
  <% @article.tags.each do |tag| %>
  <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
<p><%= @article.body %></p>
<%= link_to "Edit", edit_article_path(@article) %>
<h3>Comments(<%= @article.comments.count %>)</h3>
<%= render partial: "articles/comment", collection: @article.comments.reverse %>
<%= render partial: "comments/form" %>
<%= link_to "Back to Articles Index", articles_path %>
<%= link_to "Delete", article_path(@article), method: "delete", data: {confirm: "Do you really want to delete?"} %>
