<table class="table table-hover" id="articles">
  <thead>
    <tr>
      <th scope="col">All Articles</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr class="table-light">
      <td>
        <%= link_to article.title, article_path(article), class: "article_title" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
